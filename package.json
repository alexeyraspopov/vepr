{
  "name": "vepr",
  "version": "0.0.0",
  "description": "A JavaScript library for exploratory data visualization",
  "author": "Alexey Raspopov",
  "license": "ISC",
  "repository": "alexeyraspopov/vepr",
  "homepage": "https://alexeyraspopov.github.io/vepr",
  "scripts": {
    "serve": "cd docs && vite",
    "build": "rollup --config rollup.config.js",
    "test": "vitest run --coverage",
    "docs": "cd docs && vite build --base /vepr",
    "postbuild": "tsc --allowJs --declaration --emitDeclarationOnly build/vepr.js && prettier --write build/vepr.d.ts"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.24.5",
    "prettier": "^2.7.1",
    "prettier-plugin-jsdoc": "^0.4.2",
    "rollup": "^2.77.0",
    "rollup-plugin-copy": "^3.4.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.3",
    "vitest": "^0.25.2"
  }
}
